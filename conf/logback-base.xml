<?xml version="1.0" encoding="UTF-8"?>
<included>
  <property name="LOG_PATH" value="/var/log/random_menu_selector"/>
  <property name="LOG_APP" value="application.log"/>

  <appender name="logstash_app" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/${LOG_APP}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/${LOG_APP}.%d{yyyy-MM-dd-HH}.%i.json.gz</fileNamePattern>
      <maxFileSize>64MB</maxFileSize>
      <maxHistory>3</maxHistory>
      <totalSizeCap>128MB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
    </encoder>
  </appender>
  <appender name="async_logstash_app" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>512</queueSize>
    <appender-ref ref="logstash_app"/>
  </appender>

</included>

